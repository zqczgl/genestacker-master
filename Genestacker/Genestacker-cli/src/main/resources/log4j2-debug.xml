<?xml version="1.0" encoding="UTF-8"?>
<!--
Log4j2 settings for option 'debug'.
-->
<Configuration>
    <!-- no filters -->
    <!-- write logs to console -->
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <!-- log message format -->
            <PatternLayout pattern="[%level] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- log at debug level -->
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
